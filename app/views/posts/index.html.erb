
<%= render partial: 'users/user', locals: { user: @user } %>
<%= render partial: 'posts/post_form', locals: { post: Post.new } %>

<% @posts.each do |post| %>
  <%= render partial: 'posts/post_with_comments', locals: { post: post } %>
<% end %>
<%= will_paginate @posts %>
<%= link_to 'Create a Post', new_user_post_path(@user) %>

<% if can? :read, @post %>
  <%= link_to "View", @post %>
<% end %