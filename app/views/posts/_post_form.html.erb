<h3>Create a post</h3>
<%= form_with(model: post, url: user_posts_path(@user), method: :post) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :text %>
    <%= form.text_area :text %>
  </div>

  <%= form.hidden_field :author_id, value: current_user.id %>

  <div>
    <%= form.submit 'submit' %>
  </div>
<% end %>
