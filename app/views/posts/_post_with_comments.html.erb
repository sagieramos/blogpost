<section>
  <%= render partial: 'posts/post', locals: { post: post } %>
  
  <article>
    <% if post.comments.present? %>
      <% post.comments.each do |comment| %>
        <%= render partial: 'comments/comment', locals: { comment: comment } %>
      <% end %>
    <% else %>
      <p>No comments yet.</p>
    <% end %>
  </article>
  <hr/>
</section>
